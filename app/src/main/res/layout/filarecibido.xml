<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginTop="5dp"
    android:background="#FFFF"

    android:padding="5dp">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgFotoPrin"
        android:layout_width="53dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/user_icon" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/imgFotoPrin">

        <TextView
            android:id="@+id/PrinHora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="5dp"
            android:fontFamily="sans-serif"
            android:text="00:00"
            android:textColor="#6D6D6D"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/PrinNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="Nombre"
            android:textAlignment="viewStart"
            android:textColor="#6D6D6D"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/PrinTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/PrinNombre"
            android:layout_alignParentStart="true"
            android:layout_marginTop="1dp"
            android:fontFamily="sans-serif"
            android:text="Encabezado"
            android:textColor="#6D6D6D"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/PrinMensaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/PrinTitulo"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="1dp"
            android:fontFamily="sans-serif"
            android:text="Mensaje"
            android:textColor="#6D6D6D"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/puntuacion"
            android:layout_width="13dp"
            android:layout_height="14dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/icon_start"
            android:fontFamily="sans-serif"


            android:textSize="14dp" />

    </RelativeLayout>

</LinearLayout>